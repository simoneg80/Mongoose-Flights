<%- include('../partials/header') %>

<form id="new-form" action="/flights" method="POST">
  <label>Airline:</label>
  <select name="airline">
    <option value="American">American</option>
    <option value="Southwest">Southwest</option>
    <option value="United">United</option>
  </select>
  <label>Airport:</label>
  <select name="airport">
    <option value="AUS">Austin</option>
    <option value="DFW">Dallas</option>
    <option value="DEN" selected>Denver</option>
    <option value="LAX">Los Angeles</option>
    <option value="SAN">San Diego</option>
  </select>
  <label>Flight No:</label>
  <input type="number" name="flightNo" />
  <label>Departure:</label>
  <input type="datetime-local" name="departs" />
  <input type="submit" value="Add Flight" />
</form>

<%- include('../partials/footer') %>
